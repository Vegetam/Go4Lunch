<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/item_list"
    >

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_name"
        android:textColor="@color/black"
        android:maxLength="20"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_photo" />

    <TextView
        android:id="@+id/tv_metre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_metre"
        app:layout_constraintRight_toLeftOf="@id/img_photo"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/img_photo" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="tv_type"
        app:layout_constraintBottom_toTopOf="@+id/tv_opening"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:maxLength="35"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="tv_address"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_opening"
        app:layout_constraintLeft_toRightOf="@id/tv_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_joining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="(1)"
        android:textSize="12sp"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/img_rate_first"
        app:layout_constraintRight_toLeftOf="@id/img_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_metre" />

    <ImageView
        android:id="@+id/img_person"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="2dp"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/tv_joining"
        app:layout_constraintBottom_toBottomOf="@+id/tv_joining"
        app:srcCompat="@drawable/ic_baseline_person_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_opening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_opening"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_photo" />

    <ImageView
        android:id="@+id/img_rate_first"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@id/img_photo"
        app:layout_constraintBottom_toBottomOf="@id/img_photo"
        app:srcCompat="@drawable/ic_baseline_star_rate_24" />

    <ImageView
        android:id="@+id/img_rate_second"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toLeftOf="@id/img_rate_first"
        app:layout_constraintBottom_toBottomOf="@id/img_photo"
        app:srcCompat="@drawable/ic_baseline_star_rate_24" />

    <ImageView
        android:id="@+id/img_rate_third"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toLeftOf="@id/img_rate_second"
        app:layout_constraintBottom_toBottomOf="@id/img_photo"
        app:srcCompat="@drawable/ic_baseline_star_rate_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_photo"
        android:layout_marginTop="10dp"
        android:background="@color/underline"
         />


</androidx.constraintlayout.widget.ConstraintLayout>